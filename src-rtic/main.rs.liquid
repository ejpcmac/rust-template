#![no_std]
#![no_main]

use defmt_rtt as _;
use panic_probe as _;

#[rtic::app(device = hal, dispatchers = [])]
mod app {
    #[cfg(feature = "feather-nrf52840")]
    use embassy_nrf as hal;
    #[cfg(feature = "nucleo-l476rg")]
    use embassy_stm32 as hal;

    #[shared]
    struct SharedResources {}

    #[local]
    struct LocalResources {}

    /// The name and version of the firmware.
    const FW_INFO: &str =
        concat!(env!("CARGO_PKG_NAME"), " ", env!("VERSION_WITH_GIT"));

    #[init]
    fn init(_cx: init::Context) -> (SharedResources, LocalResources) {
        defmt::info!("Starting {}...", FW_INFO);

        #[expect(clippy::default_trait_access, reason = "for genericity")]
        let _p = hal::init(Default::default());

        defmt::info!("Firmware initialised!");

        (SharedResources {}, LocalResources {})
    }

    #[idle]
    fn idle(_: idle::Context) -> ! {
        loop {
            cortex_m::asm::nop();
        }
    }
}

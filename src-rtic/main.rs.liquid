#![no_std]
#![no_main]

use defmt_rtt as _;
use panic_probe as _;

#[rtic::app(device = {{hal-crate}}::pac, dispatchers = [])]
mod app {
    use {{hal-crate}}::prelude::*;

    #[shared]
    struct SharedResources {}

    #[local]
    struct LocalResources {}

    /// The name and version of the firmware.
    const FW_INFO: &str =
        concat!(env!("CARGO_PKG_NAME"), " ", env!("VERSION_WITH_GIT"));

    #[init]
    fn init(cx: init::Context) -> (SharedResources, LocalResources) {
        defmt::info!("Starting {}...", FW_INFO);

        #[expect(clippy::no_effect_underscore_binding, reason = "not yet used")]
        let _cp = cx.core;
        let dp = cx.device;

        // Clock configuration.
        let mut rcc = dp.RCC.constrain();
        let mut flash = dp.FLASH.constrain();
        let mut pwr = dp.PWR.constrain(&mut rcc.apb1r1);
        let _clocks = rcc.cfgr.freeze(&mut flash.acr, &mut pwr);

        defmt::info!("Firmware initialised!");

        (SharedResources {}, LocalResources {})
    }

    #[idle]
    fn idle(_: idle::Context) -> ! {
        loop {
            cortex_m::asm::nop();
        }
    }
}

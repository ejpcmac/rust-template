[alias]
run-feather = "run --features=feather-nrf52840 -- --chip=nRF52840_xxAA"
run-nucleo = "run --features=nucleo-l476rg -- --chip=STM32L475RGTx"

[build]
target = "thumbv7em-none-eabihf"

[target.'cfg(all(target_arch = "arm", target_os = "none"))']
runner = "probe-rs run"
rustflags = [
    "-C", "linker=flip-link",
    "-C", "link-arg=-Tlink.x",
    "-C", "link-arg=-Tdefmt.x",
]

[env]
DEFMT_LOG = "trace"

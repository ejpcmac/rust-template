[workspace]
resolver = "2"
members = ["{{project-name}}-board", "{{project-name}}-fw"]{% if project-type != "Embedded (Bare-metal)" %}
exclude = ["{{project-name}}-app"]{% endif %}

[workspace.package]
version = "0.1.0-dev.0"
authors = ["{{authors}}"]
edition = "2024"
homepage = "https://github.com/{{github-username}}/{{project-name}}"
license = "{{license-spdx}}"
repository = "https://github.com/{{github-username}}/{{project-name}}"
rust-version = "1.85"

[profile.release]
panic = "abort"
opt-level = "z"
codegen-units = 1
lto = true
debug = true

{{lints}}

[workspace]
resolver = "3"
members = [{% if project-kind == "embedded" %}{% if project-type != "Embedded (Bare-metal)" %}"firmware/{{project-name}}-app", {% endif %}{% else %}"{{project-name}}", {% if project-type != "Minimal" %}"{{project-name}}-helpers", {% endif %}{% endif %}"xtask"]{% if project-kind != "embedded" %}
default-members = ["{{project-name}}"{% if project-type != "Minimal" %}, "{{project-name}}-helpers"{% endif %}]{% endif %}

[workspace.package]
version = "0.1.0-dev.0"
authors = ["{{authors}}"]
edition = "2024"
homepage = "https://github.com/{{github-username}}/{{project-name}}"
license = "{{license-spdx}}"
repository = "https://github.com/{{github-username}}/{{project-name}}"
rust-version = "1.85"

